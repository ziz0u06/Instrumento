


<div class="text-center"><h1> 🎻 Superstar 🎷</h1></div>


<div class="container py-5">

<div class="card mb-3">
  <div class="card-body">
    <h3 class="card-title"> <strong><%= @instrument.name  %></strong>
    <br>
    <br>
    <p class="card-text"><%= @instrument.description %></p>
    <p class="card-text"><small class="text-muted">Postée par <%= @user.email %></small></p>
        <p class="card-text"><small class="text-muted"> Disponibilité du <%= @instrument.start_date %> au <%= @instrument.end_date %> </small><p>

  </div>
</div>

  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Réserve ton instrument</h3>
        <%= simple_form_for [@instrument, @booking] do |f| %>
          <%= f.input :start_date, placeholder: 'Date de début' %>
          <%= f.input :end_date, placeholder: 'Date de fin' %>
          <%# <%= f.input :city, placeholder: 'Ville' %>
          <%= f.submit "Je choisis cet instrument", class: 'btn btn-primary' %>
        <% end %>
      </div>
      <%= link_to "⏎ Retourner aux instruments", root_path %>
    </div>
  </div>
</div>
